{
  "app-id": "com.realwebthings.fileshare",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "22.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "fileshare",
  "finish-args": [
    "--share=network",
    "--filesystem=home",
    "--socket=x11"
  ],
  "modules": [
    {
      "name": "fileshare",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 fileshare ${FLATPAK_DEST}/bin/fileshare"
      ],
      "sources": [
        {
          "type": "file",
          "path": "releases/linux/fileshare"
        }
      ]
    }
  ]
}